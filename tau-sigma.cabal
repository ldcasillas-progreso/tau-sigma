name:                tau-sigma
version:             0.2.0.0
synopsis:            A command-line utility for frequency stability analysis.
license:             BSD3
license-file:        LICENSE
author:              Luis Casillas <luis@casillas.org>
maintainer:          luis@casillas.org
copyright:           Copyright (c) 2015 Luis Casillas
category:            Math
build-type:          Simple
cabal-version:       >=1.10


library
  default-language:    Haskell2010
  hs-source-dirs:      src
  Ghc-Options:         -Wall

  exposed-modules:     TauSigma.ADEV
                     , TauSigma.Chart
                     , TauSigma.Convert
                     , TauSigma.Noise
                     , TauSigma.Types
                     , TauSigma.Util.Allan
                     , TauSigma.Util.CSV
                     , TauSigma.Util.Pipes
                     , TauSigma.Util.Vector

  build-depends:       Chart 
                     , Chart-diagrams 
                     , MonadRandom 
                     , base >=4.7 && <5
                     , bytestring 
                     , cassava 
                     , containers
                     , data-default 
                     , filepath 
                     , lens 
                     , mtl 
                     , optparse-applicative 
                     , pipes 
                     , pipes-bytestring
                     , pipes-csv
                     , pipes-vector
                     , primitive
                     , random
                     , tagged
                     , transformers
                     , vector


executable tau-sigma
  default-language:    Haskell2010
  hs-source-dirs:      app
  main-is:             Main.hs
  build-depends:       base >=4.7 && <5
                     , mtl
                     , tau-sigma
                     , transformers
                     , optparse-applicative

  
Test-Suite spec
  Type:                exitcode-stdio-1.0
  Default-Language:    Haskell2010
  Hs-Source-Dirs:      test
  Ghc-Options:         -Wall
  Main-Is:             Spec.hs
  Build-Depends:       base >=4.7 && <5
                     , hspec
                     , QuickCheck
                     , tau-sigma 
                     , vector
